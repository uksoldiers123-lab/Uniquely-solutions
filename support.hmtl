  <!-- Header -->
  <header class="hero" style="padding:48px 0 72px">
    <div class="container">
      <p class="section-label"><span class="dot"></span> Help & support</p>
      <h1 style="color:#fff; margin:10px 0 12px">Support Center</h1>
      <p class="lead" style="max-width:60ch">
        We’re here to help with payments, merchant onboarding, billing, and technical questions.
      </p>
    </div>

    <!-- Support content -->
    <div class="content-wrap">
      <div class="container content">
        <!-- Quick cards -->
        <div style="display:grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap:16px">
          <a href="faq.html" style="border:1px solid #e5e7eb; border-radius:14px; padding:14px; background:#fbfdff">
            <strong>Browse FAQs</strong>
            <div class="svc-note" style="margin-top:6px">Find answers to common questions</div>
          </a>
          <a href="status.html" style="border:1px solid #e5e7eb; border-radius:14px; padding:14px; background:#fbfdff">
            <strong>System status</strong>
            <div class="svc-note" style="margin-top:6px">Check incident reports and uptime</div>
          </a>
          <a href="make-payments.html" style="border:1px solid #e5e7eb; border-radius:14px; padding:14px; background:#fbfdff">
            <strong>Make a payment</strong>
            <div class="svc-note" style="margin-top:6px">Pay an invoice or one‑time charge</div>
          </a>
        </div>

        <!-- Contact options -->
        <div style="display:grid; grid-template-columns: 1.2fr .8fr; gap:18px; margin-top:16px">
          <!-- Formspree form -->
          <div>
            <h2 style="margin:0 0 8px">Submit a request</h2>

            <form action="https://formspree.io/f/movlypdv" method="POST" class="form" id="supportForm">
              <!-- Formspree helpers -->
              <input type="hidden" name="_subject" value="Support request — Uniquity Solutions">
              <input type="hidden" name="_next" value="https://uksoldiers123-lab.github.io/Uniquely-solutions/thank-you.html">
              <input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off">

              <div class="row">
                <div class="field">
                  <label class="label" for="name">Full name</label>
                  <input class="input" id="name" name="name" type="text" placeholder="Jane Doe" required>
                </div>
                <div class="field">
                  <label class="label" for="email">Email</label>
                  <input class="input" id="email" name="email" type="email" placeholder="jane@example.com" required>
                </div>
              </div>

              <div class="row">
                <div class="field">
                  <label class="label" for="topic">Topic</label>
                  <select class="select" id="topic" name="topic" required>
                    <option value="">Choose a topic</option>
                    <option value="payment">Payment issue</option>
                    <option value="merchant">Merchant onboarding</option>
                    <option value="billing">Billing & invoices</option>
                    <option value="technical">Technical/API</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div class="field">
                  <label class="label" for="reference">Invoice / Order # (optional)</label>
                  <input class="input" id="reference" name="reference" type="text" placeholder="INV-2025-0001">
                </div>
              </div>

              <div class="field">
                <label class="label" for="message">How can we help?</label>
                <textarea class="textarea" id="message" name="message" rows="5" placeholder="Describe the issue or question" required></textarea>
              </div>

              <div class="row">
                <div class="field">
                  <label class="label" for="url">Link or screenshot URL (optional)</label>
                  <input class="input" id="url" name="url" type="url" placeholder="https://…">
                </div>
                <div class="field">
                  <label class="label" for="priority">Priority</label>
                  <select class="select" id="priority" name="priority">
                    <option value="normal">Normal</option>
                    <option value="high">High</option>
                    <option value="urgent">Urgent</option>
                  </select>
                </div>
              </div>

              <div class="field" style="margin-top:6px">
                <label style="display:flex; align-items:center; gap:10px; font-size:14px; color:#374151">
                  <input type="checkbox" id="consent" name="consent" value="yes" required>
                  I consent to being contacted about this request.
                </label>
              </div>

              <div style="display:flex; gap:12px; align-items:center; margin-top:6px">
                <button class="btn btn-primary" type="submit">Send request</button>
                <a class="btn btn-ghost" href="faq.html">View FAQs</a>
              </div>
            </form>
          </div>

          <!-- Contact panel -->
          <aside style="border:1px solid #e5e7eb; border-radius:14px; padding:14px; background:#fff">
            <h3 style="margin:0 0 8px">Contact</h3>
            <div class="svc-note">Email</div>
            <p style="margin:6px 0 12px">
              <a href="mailto:support@uniquitysolutions.com">support@uniquitysolutions.com</a>
            </p>
            <div class="svc-note">Phone</div>
            <p style="margin:6px 0 12px">1‑800‑XXX‑XXXX (coming soon)</p>
            <div class="svc-note">Hours</div>
            <p style="margin:6px 0 0">Mon–Fri, 9:00–18:00 (local)</p>
          </aside>
